{
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "babel",
    "prettier"
  ],
  "rules": {
    "arrow-parens": "off",
    "babel/semi": 1,
    "comma-dangle": "off",
    "function-paren-newline": "off",
    "no-confusing-arrow": "warn",
    "object-curly-newline": "off",
    "react/forbid-prop-types": "off",
    "react/jsx-filename-extension": "off",
    "react/no-danger": "off",
    "react/prefer-stateless-function": "off",
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "singleQuote": true
      }
    ]
  }
}